<div id="invite-user" class="dashboard-users">
  <h1 class="main-header"><%= t('.main_header') %></h1>
  <h2 class="second-header"><%= t('.second_header') %></h2>
  <div class="ui-widget">
    <%= form_tag 'dashboard/users/invite_user', remote: true do%>
      <%= text_field_tag 'invitation-email', nil, class: 'form-control user_mail_to_add' %>
      <%= hidden_field_tag 'selected_mail_id', '-1' %>
      <%= hidden_field_tag 'selected_mail_mail', 'NaN' %>
      <small class="text-muted">We'll never share your email with anyone else.</small>
      <br>
      <%= button_tag t('.invite'), id: 'invite_user_btn', data: { disable_with: "Please wait...", dismiss: "modal"}, class: 'invite_user_btn', disabled: true %>
    <% end %>
  </div>
  <div class="modal" id="user-add-modal" style="display:none;">
   <p id="user-add-body"></p>
  </div>
</div>
