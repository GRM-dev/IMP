<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Visible name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Was activated</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.visible_name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.was_activated %></td>
        <td><%= user.active %></td>
        <td><%= link_to 'Show', controller: :users, action: :show, :id => user.id %></td>
        <td><%= link_to 'Edit', controller: :users, action: :edit, :id => user.id %></td>
        <td><%= link_to 'Destroy',controller: :users, action: :edit, :id => user.id, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

