<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag(('logo_login.png'), :class => "img-responsive logo-responive") %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="content">
        <h1>Sign in</h1>
        <%= form_for(:session, url: login_path) do |f| %>
            <%= f.email_field :email, :placeholder => t('.email'), :required => "required", :class => "input-txt" %>
            <%= f.password_field :password, :placeholder =>  t('.password'), :required => "required", :class => "input-txt" %>
            <%= f.submit t('.login'), :class => "btn btn-primary btn--right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>